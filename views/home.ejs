<link rel="stylesheet" href="/css/home.css" />
<body>
  <main>
    <h1>Home Page </h1>
    <section id="feed-posts">
      <h3>Posts</h3>
      <% if(locals.user){%>
        <form action="/posts/create" id="new-post-form" method="post">
          <textarea
            name="content"
            cols="30"
            rows="3"
            placeholder="write your post..."
            required
          ></textarea>
          <input type="submit" value="Post" />
        </form>
      <%}%>
     
      <div>
        <%for(post of posts){%>
         <%- include("_post")%>
    <%}%>
  </div>
  
</section>
  </main>
</body>
